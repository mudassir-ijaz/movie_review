<% if !user_signed_in? %>
<div class="jumbotron">
  <h1>Your Favorite Movies Reviewed</h1>
  <p>Based on your recommendations, we pop up such movies which you like the most and that is our duty.</p>
  <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
</div>
<% end %>

<div class="row">
  <div class="card card-image">
    <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
    </div>
  </div>
<% end %>
  </div>
</div>
<%=will_paginate @movies, renderer: BootstrapPagination::Rails,previous_label: "Backward Move", next_label: "Forward Move", inner_window:0, outer_window:0%>